{
  "name": "crop-renamer",
  "version": "1.0.0",
  "description": "Helper tool to rename images for batch cropping by ImageMagick.",
  "main": "main.cjs",
  "scripts": {
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint ./*.css",
    "lint:js": "npx eslint ./*.*js && npx eslint ./classes/*.*js",
    "prepare": "husky install",
    "serve": "http-server ./ --port 8000 --silent",
    "serve:firefox": "http-server ./ --port 8000 --silent && open -a \"Firefox Developer Edition\" --args --kiosk -private-window http://127.0.0.1:8000/ -devtools",
    "start": "electron .",
    "test": "start-server-and-test serve:firefox http://127.0.0.1:8000 test:cypress",
    "test:cypress": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotherightthing/crop-renamer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dotherightthing/crop-renamer/issues"
  },
  "homepage": "https://github.com/dotherightthing/crop-renamer#readme",
  "dependencies": {
    "cropperjs": "^1.5.13",
    "dtrt-string-utils": "github:dotherightthing/dtrt-string-utils",
    "dtrt-type-validate": "github:dotherightthing/dtrt-type-validate",
    "electron-context-menu": "^3.6.1",
    "exifreader": "^4.12.0",
    "stylelint": "^15.6.0",
    "stylelint-order": "^6.0.3"
  },
  "devDependencies": {
    "cypress": "^12.14.0",
    "electron": "^24.1.2",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^43.1.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "start-server-and-test": "^2.0.0"
  }
}
