{
  "root": true,
  "parserOptions": {
      "ecmaVersion": "latest"
  },
  "env": {
      "es6": true
  },
  "extends": [
    "airbnb-base/legacy"
  ],
  "globals": {
    "uiSelectFolder": "readonly"
  },
  "plugins": [
    "jsdoc"
  ],
  "ignorePatterns": [
    "node_modules/",
    "*.html"
  ],
  "rules": {
    "array-bracket-spacing": ["error", "always"],
    "block-spacing": ["error", "always"],
    "class-methods-use-this": [
      "off"
    ],
    "comma-spacing": ["error"],
    "func-names": ["warn", "as-needed"],
    "indent": ["warn", 2],
    "max-len": [ "error", {
      "code": 120,
      "tabWidth": 4,
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-use-before-define": "off",
    "no-param-reassign": [ "warn", {
      "props": false
    }],
    "no-unused-vars": [
      "warn", 
      {
        "varsIgnorePattern": "^(ui)"
      }
    ],
    "no-unused-expressions": 0,
    "prefer-regex-literals": 0,
    "valid-typeof": [
      "off"
    ]
  }
}